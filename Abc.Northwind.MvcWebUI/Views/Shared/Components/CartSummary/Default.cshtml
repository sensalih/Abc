@model Abc.Northwind.MvcWebUI.Models.CartSummartViewModel

<ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
    @foreach (var item in Model.Cart.CartLines)
    {
        <li>
            <a> @item.Product.ProductName <span class="badge">@item.Quantity</span></a>
        </li>
    }
    <li role="separator" class="dropdown-divider"></li>
    <li>
        <a><span class="glyphicon glyphicon-aligen-left glyphicon-shoping-cart" aria-hidden="true"><span>@Model.Cart.Total</span></a>
    </li>
    <li role="separator" class="dropdown-divider"></li>
    <li>
        <a asp-controller="Cart" asp-action="List">Go to Cart Details</a>
    </li>
</ul>


